@model myMember.Models.changeMemData

@{
    ViewBag.Title = "修改會員資料";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
.content
{
    width:40%;
    margin:0px auto;
}

</style>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="content">
    <h2>修改會員資料</h2>
    @Html.LabelFor(model => model.name)
    <div class="form-group">
            @Html.TextBoxFor(model => model.name, new { @class = "form-control", @placeholder = "請輸入暱稱" })
            @Html.ValidationMessageFor(model => model.name)
    </div>
    @Html.LabelFor(model => model.mail)
    <div class="form-group">
            
            @Html.TextBoxFor(model => model.mail, new { @class = "form-control", @placeholder = "請輸入電子郵件" })
            @Html.ValidationMessageFor(model => model.mail)

    </div>
            <div class="text-right">
            <input type="submit" value="確定" class="btn btn-primary" />
            </div>
     </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
