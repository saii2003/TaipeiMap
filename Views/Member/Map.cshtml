@{
    ViewBag.Title = "Map";

    
    
}
<style>
#end
{
    height:250px;
}
#duration,#distance
{
    font-size:14px;
    text-align:left;
}
#map
{
    float:left;
}
#panel 
{
    padding:0px 5px 0px 5px;
    margin:0px;
    overflow: auto;
    float: left;
    width: 20%;
    font-size: 12px;

}


</style>
    
    <div class="row">
    <div class="col-md-2">
     <h4>景點路線地圖</h4>
        <div class="form-group">
        <label><h5>出發地：</h5></label>
        <input id="start" type="text" class="form-control" onchange="calcRoute();" placeholder="請輸入出發地"/>
        </div>
        
        <div class="form-group">
        <lable><h5>光觀景點：</h5></lable>
        <select class="form-control" id="end" onchange="calcRoute();" multiple >
          <option value="台北市101大樓">台北101</option>
          <option value="台北市西門町">西門町</option>
          <option value="台北市動物園">動物園</option>   
          <option value="陽明山國家公園">陽明山</option>
          <option value="台北市動物園">士林夜市</option>
          <option value="台北市龍山寺">台北龍山寺</option>
          <option value="台北市行天宮">台北行天宮</option> 
          <option value="台北中正紀念堂">中正紀念堂</option>
          <option value="國父紀念館">國父紀念館</option>
          <option value="台北故宮博物院">故宮博物院</option>   
          <option value="松山文化創意園區">松山文創園區</option>
          <option value="華山1914文化創意產業園區">華山1914文創園區</option>
        </select>
        </div>
        <div class="form-group">
        <lable><h5>交通工具：</h5></lable>
        <select id="mode" class="form-control">
          <option value="DRIVING">開車</option>   
          <option value="TRANSIT">大眾運輸</option>
          <option value="WALKING">走路</option>
        </select>
        </div>
        <div id="duration" class="text-primary"></div>
        <div id="distance" class="text-primary"></div>
    </div>
    <div class="col-md-10">

    <div id="map" style="width:100%; height: 500px;"></div>
    <div id="panel"></div>
     <div class="fb-comments" data-href="http://localhost:2785/Member/Intro" data-numposts="5" data-width="100%"></div>
    </div>
                    
    </div>

    <script>
        initMap();
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbBZ2YfJVXGDif2Fv9ggvr7V8JepMX5xw&callback=initMap"
