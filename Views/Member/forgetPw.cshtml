@model myMember.Models.forgetViewModel

@{
    ViewBag.Title = "忘記密碼";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
.content
{
    margin:0px auto;
    width:40%;
}
.error
{
    width:40%;
    padding:5px 0px;
    text-align:center;
    margin:10px 0px;
    color:Red;
}


</style>

@using (Html.BeginForm()) {
    
    <div class="content">
    <h2>忘記密碼</h2>


  
            

            
    
    <div class="form-group">
            @Html.LabelFor(model => model.username)
            @Html.TextBoxFor(model => model.username, new { @class = "form-control",placeholder="請輸入帳號" })
            @Html.ValidationMessageFor(model => model.username)
    </div>
    <div class="form-group">
            @Html.LabelFor(model => model.mail)

            @Html.TextBoxFor(model => model.mail, new { @class = "form-control",placeholder="請輸入電子郵件" })
            @Html.ValidationMessageFor(model => model.mail)
     </div>
      <div class="error">
     @Html.ValidationSummary(true) 
    </div>
    <div  class="text-right">
            <input type="submit" value="確定" class="btn btn-primary" />
     </div>
     </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
