@model myMember.Models.MemberView

@{
    ViewBag.Title = "註冊";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
.content
{
    width:40%;
    margin:0px auto;

}

</style>


@using (Html.BeginForm()) {
    
    <div class="content">
    <h2>註冊</h2>
        <div class="form-group">    
            @Html.LabelFor(model => model.username)   
            @Html.TextBoxFor(model => model.username, new { @class="form-control", @placeholder="請輸入6~12字元" })
            
            
            @Html.ValidationMessageFor(model => model.username)
        </div>
        <div class="form-group">
        
            @Html.LabelFor(model => model.password)
            @Html.PasswordFor(model => model.password, new { @class="form-control", @placeholder="請輸入6~12字元" })
            @Html.ValidationMessageFor(model => model.password)
        </div>

       <div class="form-group">
            @Html.LabelFor(model => model.confirmPw)
            @Html.PasswordFor(model => model.confirmPw, new { @class = "form-control", @placeholder="請輸入確認密碼" })
            @Html.ValidationMessageFor(model => model.confirmPw)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.name)
            @Html.TextBoxFor(model => model.name, new { @class = "form-control", @placeholder="請輸入暱稱" })
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sex)<br>
            @Html.RadioButtonFor(model => model.sex, "男") 男
             @Html.RadioButtonFor(model => model.sex, "女") 女
            @Html.ValidationMessageFor(model => model.sex)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.mail)
            @Html.TextBoxFor(model => model.mail, new { @class = "form-control", @placeholder="請輸入電子郵件" })
            @Html.ValidationMessageFor(model => model.mail)
        </div>

        <div class="text-right">
            <input type="submit" value="註冊" class="btn btn-primary"/>
        </div>
        <div>
        @Html.ValidationSummary(true)
        </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
